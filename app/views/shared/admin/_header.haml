-# Main header
.admin__header{style: "width: 100%; height: 3em; text"}
  .admin__header-user-name{style: "float: left; text-align: start; margin-left: 10px;"}
    .p{style: "bold; color: black; font-size: 16px;"}
      = "Zalogowany jako: #{current_user.first_name} #{current_user.last_name}"
  .admin__header-links{style: "width: 60%; float: right; text-align: end; margin-right: 25px;"}
    = link_to "OFERTY I ZAMÓWIENIA", admin_orders_path, style: "text-decoration: none; color: black; font-size: 14px; margin-left: 15px;"
    = link_to "SŁOWNIKI", admin_dictionaries_path, style: "text-decoration: none; color: black; font-size: 14px; margin-left: 15px;"
    = link_to "PRODUKTY", admin_products_path, style: "text-decoration: none; color: black; font-size: 14px; margin-left: 15px;"
    = link_to "UŻYTKOWNICY", admin_users_path, style: "text-decoration: none; color: black; font-size: 14px; margin-left: 15px;"
    = button_to "WYLOGUJ", destroy_user_session_path, method: :delete, data: { confirm: "Czy napewno chcesz się wylogować ?"}
